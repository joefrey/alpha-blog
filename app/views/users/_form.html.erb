<%= render 'shared/errors', obj: @user %>

<%= form_with(model: @user, local: true) do |f| %>
  
  <div class="field">
    <%= f.label :username, 'Username', :class => 'label' %>
    <div class="control">
    <%= f.text_field :username, :class => 'input', :placeholder => 'Enter a username' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email, 'Email', :class => 'label' %>
    <div class="control">
    <%= f.email_field :email, :class => 'input', :placeholder => 'Enter your email address' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, 'Password', :class => 'label' %>
    <div class="control">
    <%= f.password_field :password, :class => 'input', :placeholder => 'Enter your password' %>
    </div>
  </div>

  <div class="field">
    <%= f.submit 'Sign up', :class => 'button is-primary' %>
  </div>

  

  
    
<% end %>