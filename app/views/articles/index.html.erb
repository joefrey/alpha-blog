<div class="container">

  <div class="mb-5">
    <h1 class="title is-2">Articles listing page</h1>
  </div>

  <% @articles.each do |article| %>

  <div class="level box">
    <div class="level-left">
      <div class="level-item">
        <div>
        <h2 class="title is-size-4-tablet"><%= article.title %></h2>
        <p><%= article.description %></p>
      </div>
      </div>
    </div>
    <div class="level-right">
      <div class="level-item">
        <button class="button is-danger">Delete</button>
      </div>
    </div>
  </div>
  <% end %>


</div>